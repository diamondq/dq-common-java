<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <conversionRule conversionWord="DQLogger" class="com.diamondq.common.utils.logback.DQLogger" />
  <conversionRule conversionWord="DQMDC" class="com.diamondq.common.utils.logback.DQMDC" />
  <conversionRule conversionWord="DQIfMDC" class="com.diamondq.common.utils.logback.DQIfMDC" />
  <conversionRule conversionWord="DQContext" class="com.diamondq.common.utils.logback.DQContext" />
  <conversionRule conversionWord="DQTime" class="com.diamondq.common.utils.logback.DQTime" />
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <!-- %-9.9marker replaced with %-9.9DQMDC(slf4j.marker) as pax-logging-logback currently loses the marker -->
      <pattern>
        <![CDATA[%DQTime{HH:mm:ss.SSS} [%-16.16thread] %-5level %-36.36logger{36} - %-30.30DQContext{30,true} - %DQContext{}%DQIfMDC{!bundle.id,!bundle.name,!bundle.version,!slf4j.marker,-\s}%DQMDC{!bundle.id,!bundle.name,!bundle.version,!slf4j.marker}%DQIfMDC{!bundle.id,!bundle.name,!bundle.version,!slf4j.marker,\s}%msg%n]]></pattern>
    </encoder>
  </appender>
  <if condition='property("env.eclipse").equals("true") == false'>
    <then>
      <logger name="com.diamondq" level="DEBUG" />
      <logger name="com.diamondq.common.vertx.EventBusManager" level="TRACE" />
      <logger name="com.diamondq.common.metrics.micrometer" level="WARN" />
    </then>
  </if>
  <logger name="io.netty.util.internal.PlatformDependent0" level="INFO" />
  <logger name="com.diamondq.common.lambda" level="DEBUG" />
  <logger name="com.diamondq.common.context" level="DEBUG" />
  <logger name="liquibase" level="INFO" />
  <logger name="org.codehaus.janino" level="INFO" />
  <logger name="h2database" level="INFO" />
  <logger name="com.atomikos" level="INFO" />
  <logger name="io.netty.channel.nio.NioEventLoop" level="INFO" />
  <root level="TRACE">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>