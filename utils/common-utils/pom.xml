<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.diamondq.common</groupId>
    <artifactId>common-parent</artifactId>
    <version>${revision}${sha1}${changelist}</version>
    <relativePath>../../common-parent</relativePath>
  </parent>
  <artifactId>common-utils</artifactId>
  <packaging>bundle</packaging>
  <name>DiamondQ Common: Utils</name>
  <properties>
    <osgi.extra.import.packages>com.diamondq.common.tracing.opentracing.wrappers;resolution:=optional,
    </osgi.extra.import.packages>
    <osgi.embed.dependency>*;groupId=com.googlecode.gentyref</osgi.embed.dependency>
    <osgi.manifest.directory>${project.build.outputDirectory}/META-INF</osgi.manifest.directory>
    <osgi.osgi.directory>${project.build.outputDirectory}</osgi.osgi.directory>
    <osgi.export.scr>true</osgi.export.scr>
  </properties>
  <dependencies>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
    </dependency>
    <!--suppress NonOsgiMavenDependency -->
    <!-- This is only listed so it can be embedded directly, since it doesn't support OSGi -->
    <dependency>
      <groupId>com.googlecode.gentyref</groupId>
      <artifactId>gentyref</artifactId>
    </dependency>
    <dependency>
      <groupId>jakarta.enterprise</groupId>
      <artifactId>jakarta.enterprise.cdi-api</artifactId>
      <optional>true</optional>
    </dependency>
    <dependency>
      <groupId>com.google.guava</groupId>
      <artifactId>guava</artifactId>
      <optional>true</optional>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-simple</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.jboss.jandex</groupId>
        <artifactId>jandex-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>make-index</id>
            <configuration>
              <processDefaultFileSet>true</processDefaultFileSet>
              <fileSets>
                <fileSet>
                  <directory>${project.build.directory}/classes</directory>
                  <excludes>
                    <exclude>com/diamondq/common/lambda/future/FutureUtils.class</exclude>
                  </excludes>
                </fileSet>
              </fileSets>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>